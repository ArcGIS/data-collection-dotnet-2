<UserControl
    x:Class="Esri.ArcGISRuntime.ExampleApps.DataCollection.UWP.Views.IdentifiedFeaturePopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Esri.ArcGISRuntime.ExampleApps.DataCollection.Shared.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="IdentifiedFeatureUserControl"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:DebugConverter x:Key="DebugConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Pivot>
            <PivotItem Header="Details">
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--  List of attributes from identified feature  -->
                        <ItemsControl Grid.Row="0" ItemsSource="{x:Bind IdentifiedFeatureViewModel.PopupManager.DisplayedFields, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock
                                            Margin="10,5,10,0"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{Binding Field.Label, Mode=OneWay}" />
                                        <TextBlock
                                            Margin="12,5,10,5"
                                            Style="{StaticResource BaseTextBlockStyle}"
                                            Text="{Binding FormattedValue, Mode=OneWay}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--  List of relationships where identified feature is destination  -->
                        <ItemsControl
                            Grid.Row="1"
                            HorizontalContentAlignment="Stretch"
                            ItemsSource="{x:Bind IdentifiedFeatureViewModel.DestinationRelationships, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Visibility="{Binding PopupManager, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="40" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Margin="10,10,10,5"
                                            Style="{StaticResource SubtitleTextBlockStyle}"
                                            Text="{Binding PopupManager.Title}" />
                                        <StackPanel Grid.Row="1" Grid.Column="0">
                                            <TextBlock
                                                Margin="10,5,0,0"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{Binding PopupManager.DisplayedFields[0].Field.Label, Mode=OneWay}" />
                                            <TextBlock
                                                Margin="12,5,0,5"
                                                Style="{StaticResource BaseTextBlockStyle}"
                                                Text="{Binding PopupManager.DisplayedFields[0].FormattedValue, Mode=OneWay}" />
                                            <TextBlock
                                                Margin="10,5,0,0"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{Binding PopupManager.DisplayedFields[1].Field.Label, Mode=OneWay}" />
                                            <TextBlock
                                                Margin="12,5,0,5"
                                                Style="{StaticResource BaseTextBlockStyle}"
                                                Text="{Binding PopupManager.DisplayedFields[1].FormattedValue, Mode=OneWay}" />
                                        </StackPanel>
                                        <Button
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Width="30"
                                            Height="30"
                                            Margin="0,0,15,0"
                                            HorizontalAlignment="Right"
                                            Command="{Binding ElementName=IdentifiedFeatureUserControl, Mode=OneWay, Path=DataContext.IdentifiedFeatureViewModel.SetSelectedDestinationRelationshipCommand}"
                                            CommandParameter="{Binding}"
                                            Content="&#xE76C;"
                                            FontFamily="Segoe MDL2 Assets"
                                            Style="{StaticResource TextBlockButtonStyle}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--  List of relationships where identified feature is origin  -->
                        <ItemsControl
                            Grid.Row="2"
                            HorizontalContentAlignment="Stretch"
                            ItemsSource="{x:Bind IdentifiedFeatureViewModel.OriginRelationships, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="40" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Padding="10"
                                                Style="{StaticResource SubtitleTextBlockStyle}"
                                                Text="{Binding RelatedTable.TableName, Mode=OneWay}" />
                                        </Grid>
                                        <ItemsControl HorizontalContentAlignment="Stretch" ItemsSource="{Binding OriginRelatedRecords, Mode=OneWay}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="40" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="5" />
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>
                                                        <StackPanel
                                                            x:Name="OriginRecordGrid"
                                                            Grid.Row="1"
                                                            Grid.Column="0"
                                                            Orientation="Vertical">
                                                            <TextBlock
                                                                Margin="10,5,0,0"
                                                                Style="{StaticResource BodyTextBlockStyle}"
                                                                Text="{Binding DisplayedFields[0].Field.Label, Mode=OneWay}" />
                                                            <TextBlock
                                                                Margin="12,5,0,5"
                                                                Style="{StaticResource BaseTextBlockStyle}"
                                                                Text="{Binding DisplayedFields[0].FormattedValue, Mode=OneWay}" />
                                                            <TextBlock
                                                                Margin="10,5,0,0"
                                                                Style="{StaticResource BodyTextBlockStyle}"
                                                                Text="{Binding DisplayedFields[1].Field.Label, Mode=OneWay}" />
                                                            <TextBlock
                                                                Margin="12,5,0,5"
                                                                Style="{StaticResource BaseTextBlockStyle}"
                                                                Text="{Binding DisplayedFields[1].FormattedValue, Mode=OneWay}" />
                                                            <TextBlock
                                                                Margin="10,5,0,0"
                                                                Style="{StaticResource BodyTextBlockStyle}"
                                                                Text="{Binding DisplayedFields[2].Field.Label, Mode=OneWay}" />
                                                            <TextBlock
                                                                Margin="12,5,0,5"
                                                                Style="{StaticResource BaseTextBlockStyle}"
                                                                Text="{Binding DisplayedFields[2].FormattedValue, Mode=OneWay}" />
                                                        </StackPanel>
                                                        <Button
                                                            Grid.Row="1"
                                                            Grid.Column="1"
                                                            Width="30"
                                                            Height="30"
                                                            Margin="0,0,15,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Command="{Binding ElementName=IdentifiedFeatureUserControl, Mode=OneWay, Path=DataContext.IdentifiedFeatureViewModel.SetSelectedOriginRelationshipCommand}"
                                                            CommandParameter="{Binding}"
                                                            Content="&#xE76C;"
                                                            FontFamily="Segoe MDL2 Assets"
                                                            Style="{StaticResource TextBlockButtonStyle}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="Attachments">
                <TextBlock Text="Not yet implemented" />
            </PivotItem>
        </Pivot>
    </Grid>
</UserControl>
