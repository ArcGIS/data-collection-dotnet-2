<customcontrols:CardBase x:Class="Esri.ArcGISRuntime.OpenSourceApps.DataCollection.UWP.Views.MapCards.BookmarksCard"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:controls="using:Esri.ArcGISRuntime.Toolkit.UI.Controls"
                         xmlns:customcontrols="using:Esri.ArcGISRuntime.OpenSourceApps.DataCollection.CustomControls" xmlns:views="using:Esri.ArcGISRuntime.OpenSourceApps.DataCollection.UWP.Views">
    <Grid Background="{ThemeResource ContentBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <views:CardBar IconGeometry="{StaticResource icon-bookmark-16}"
                       Title="{x:Bind Converter={StaticResource LC}, ConverterParameter=Bookmarks_PanelHeader}"
                       OwningCard="{x:Bind}"
                       CloseCommand="{x:Bind MainViewModel.MapAccessoryViewModel.ToggleBookmarksCommand, Mode=OneWay}" />
        <controls:BookmarksView Grid.Row="1"
                                GeoView="{x:Bind MainViewModel.MapAccessoryViewModel.MapView, Mode=OneWay}"
                                ItemTemplate="{StaticResource BookmarksViewItemTemplate}" />
    </Grid>
</customcontrols:CardBase>
