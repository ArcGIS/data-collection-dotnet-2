<UserControl
    x:Class="Esri.ArcGISRuntime.OpenSourceApps.DataCollection.UWP.Views.DownloadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Esri.ArcGISRuntime.OpenSourceApps.DataCollection.Shared.Converters"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DownloadUserControl"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:ProgressToVisibilityConverter x:Key="ProgressToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!--  Download Overlay  -->
        <Grid x:Name="DownloadOverlay" 
              Visibility="{Binding DownloadViewModel.IsAwaitingDownload, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Border Style="{StaticResource MapOverlayBorder}"
                Grid.Row="0"
                Grid.RowSpan="4" />
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock x:Uid="DownloadLabel_Line1" HorizontalAlignment="Center" />
                <TextBlock x:Uid="DownloadLabel_Line2" HorizontalAlignment="Center" />
            </StackPanel>
            <StackPanel Spacing="10"
                Grid.Row="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button Style="{StaticResource MapOverlayButton}"
                        Command="{Binding DownloadViewModel.CancelDownloadCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Path Data="{StaticResource calcite-ui-undo-16}" 
                              Style="{StaticResource MapOverlayButtonPathIcon}"
                              Fill="{StaticResource brand-danger}"/>
                        <TextBlock Text="Cancel" Foreground="{StaticResource brand-danger}" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MapOverlayButton}"
                    Command="{Binding DownloadViewModel.DownloadMapCommand}"
                        Foreground="{StaticResource brand-success}"
                    CommandParameter="{Binding ElementName=DownloadUserControl, Path=VisibleArea}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Path Data="{StaticResource calcite-ui-download-16}" 
                              Style="{StaticResource MapOverlayButtonPathIcon}" 
                              Fill="{StaticResource brand-success}" />
                        <TextBlock Text="Download" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!--  Progress bar area for download  -->
        <Border Style="{StaticResource PopupBorder}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding DownloadViewModel.Progress, Converter={StaticResource ProgressToVisibilityConverter}}">
            <StackPanel Spacing="{StaticResource brand-row-spacing-large}"
                        HorizontalAlignment="Center">
                <ProgressBar
                    Width="300"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding DownloadViewModel.Progress}" />
                <TextBlock Style="{StaticResource PopupProminentText}"
                    x:Uid="DownloadingMessage" />
                <Button Style="{StaticResource MapOverlayButton}"
                        HorizontalAlignment="Stretch"
                        BorderBrush="{StaticResource brand-danger}"
                    Grid.Row="2"
                    Command="{Binding DownloadViewModel.CancelDownloadCommand}">
                    <StackPanel Orientation="Horizontal" 
                                Spacing="{StaticResource brand-column-spacing}"
                                HorizontalAlignment="Center">
                        <Path Data="{StaticResource calcite-ui-undo-16}" Fill="{StaticResource brand-danger}"
                              Style="{StaticResource MapOverlayButtonPathIcon}" />
                        <TextBlock Text="Cancel" Foreground="{StaticResource brand-danger}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
