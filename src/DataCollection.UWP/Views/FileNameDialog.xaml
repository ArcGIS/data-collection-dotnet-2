<ContentDialog
    x:Class="Esri.ArcGISRuntime.ExampleApps.DataCollection.UWP.Views.FileNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Choose file name"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox
                x:Name="FileNameTextBox"
                Text="Attachment"
                TextChanged="FileNameTextBox_TextChanged" />
            <TextBlock x:Name="ValidationTextBlock" Foreground="Red" />
        </StackPanel>
    </Grid>
</ContentDialog>
