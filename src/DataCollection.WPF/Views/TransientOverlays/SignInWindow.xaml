<UserControl
    x:Class="Esri.ArcGISRuntime.OpenSourceApps.DataCollection.WPF.Views.SignInWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Esri.ArcGISRuntime.OpenSourceApps.DataCollection.Shared.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:Esri.ArcGISRuntime.OpenSourceApps.DataCollection.WPF.Utils"
    xmlns:wpfViewModels="clr-namespace:Esri.ArcGISRuntime.OpenSourceApps.DataCollection.WPF.ViewModels"
    d:DesignHeight="800"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <wpfViewModels:SignInWindowViewModel x:Key="SignInWindowViewModel" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        x:Name="MainGrid"
        DataContext="{StaticResource SignInWindowViewModel}"
        Visibility="{Binding WebAddress, Converter={StaticResource NullToVisibilityConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle Fill="{DynamicResource map-overlay-border-background}" Grid.RowSpan="3" />
        <WebBrowser x:Name="WebBrowser" MinWidth="300" MinHeight="300"
                    Grid.Row="1">
            <utils:WebBrowserExtensions.SourceController>
                <utils:SourceController UriSource="{Binding WebAddress, Mode=TwoWay, Source={StaticResource SignInWindowViewModel}}" />
            </utils:WebBrowserExtensions.SourceController>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Navigating">
                    <i:InvokeCommandAction Command="{Binding NavigateCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </WebBrowser>
        <Button Command="{Binding CancelCommand}"
                Style="{StaticResource MapOverlayButtonStyle}"
                ToolTip="{Binding ., Converter={StaticResource LC}, ConverterParameter=GenericNegativeButton_Content}"
                Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <Path Data="{StaticResource icon-undo-16}" Fill="{DynamicResource danger}" Style="{StaticResource PathIconBase}" />
                <TextBlock Text="{Binding ., Converter={StaticResource LC}, ConverterParameter=GenericNegativeButton_Content}" 
                           Style="{StaticResource MapOverlayButtonText}"
                           Foreground="{DynamicResource danger}" />
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
