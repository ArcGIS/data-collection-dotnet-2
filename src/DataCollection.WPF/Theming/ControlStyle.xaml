    <Style x:Key="BasicCardStyle" TargetType="cards:CardPresenter">
                <!--<Setter Property="Effect" Value="{StaticResource StandardDropShadow}" />-->
                <Setter Property="Padding" Value="0" />
                <Setter Property="TitleTextStyle">
