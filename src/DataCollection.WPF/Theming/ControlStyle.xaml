                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding IconSource}" MaxWidth="10" MaxHeight="10" 
                               Grid.Row="0" Grid.Column="0" Margin="0" />
